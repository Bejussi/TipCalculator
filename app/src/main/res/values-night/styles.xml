<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomNavigation">
        <item name="android:background">@color/black</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="itemIconTint">@drawable/color_icon_bottom_navigation</item>
        <item name="theme">@style/ThemeOverlay.AppTheme.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.AppTheme.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="elevationOverlayColor">@color/black</item>
    </style>

    <style name="FragmentTitleText">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/fragment_title_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ResultTitleText">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/result_title_text_size</item>
        <item name="android:textColor">@color/light_green</item>
    </style>

    <style name="ResultTotalText">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/fragment_subtitle_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ResultSumText">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/result_title_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FragmentEmptyText">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/fragment_subtitle_text_size</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="FragmentSubTitleText">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/fragment_subtitle_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextInputLayoutBoxColor" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@drawable/text_input_stroke_color</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@drawable/chip_background</item>
        <item name="chipStrokeColor">@color/light_grey</item>
        <item name="chipStrokeWidth">@dimen/chip_stroke</item>
        <item name="android:textColor">@drawable/chip_text_color</item>
    </style>

    <style name="ItemDataText">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/fragment_subtitle_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FragmentSubMenuTitleText">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/fragment_subtitle_menu_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>